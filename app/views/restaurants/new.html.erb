<div class="container mt-5">
  <h1>Create new</h1>

  <%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: Restaurant::CATEGORIES, include_black: false %>
  <%= f.submit class: 'btn btn-primary mt-2' %>
  <% end %>

</div>
