<div class="container mt-5">
  <h1>Write a review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%# <%= f.input :rating %>
    <div class="star-rating">
      <% 5.times do |i| %>
        <input type="radio" name="review[rating]" value="<%= i + 1 %>" <%= "checked" if i == 2 %> />
      <% end %>
    </div>
    <%= f.input :content %>
    <%= f.submit class: 'btn btn-primary mt-2' %>
  <% end %>
</div>
